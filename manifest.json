{
  "manifest_version": 3,
  "name": "For You - Squarespace Personalization",
  "version": "2.1.0",
  "description": "Transform any Squarespace site into a personalized experience with three simple questions",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/storage.js",
        "scripts/crawler.js",
        "scripts/crawl-progress.js",
        "scripts/debug-overlay.js",
        "scripts/audio-player.js",
        "scripts/audio-button.js",
        "scripts/personalization.js",
        "scripts/quiz.js",
        "content.js"
      ],
      "css": [
        "styles/module.css",
        "styles/quiz.css",
        "styles/animations.css",
        "styles/crawl-progress.css",
        "styles/audio-button.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "For You Personalization",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/personalization-map.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
