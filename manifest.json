{
  "manifest_version": 3,
  "name": "For You",
  "version": "2.0.0",
  "description": "Personalization that feels human",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://*.squarespace.com/*",
    "https://www.ateliereva.com/*",
    "https://ateliereva.com/*",
    "*://localhost/*",
    "file:///*"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.squarespace.com/*",
      "https://www.ateliereva.com/*",
      "https://ateliereva.com/*",
      "*://localhost/*"
    ],
    "js": ["content.js"],
    "css": ["style.css"],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
